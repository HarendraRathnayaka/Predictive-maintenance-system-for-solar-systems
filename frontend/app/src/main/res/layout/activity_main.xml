<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/side_menu_icon"
            android:layout_marginVertical="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/menu"
            />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/title_section"
            android:layout_below="@+id/top_section"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Home"/>

        </LinearLayout>

        <!-- Card Wrapper (Grid Layout 2x2) -->
        <GridLayout
            android:id="@+id/card_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_below="@+id/title_section"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/bg_shape">

            <!-- Card 1 -->
            <LinearLayout
                android:id="@+id/FaultDetection_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/_113sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_shape_white"
                android:gravity="center"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/fault_detection" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fault Detection by Image Analysis"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp" />
            </LinearLayout>

            <!-- Card 2 -->
            <LinearLayout
                android:id="@+id/Maintenanceschedulingsystem_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_shape_white"
                android:gravity="center"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/maintenance_scheduling" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maintenance scheduling system"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp" />
            </LinearLayout>

            <!-- Card 3 -->


            <!-- Card 4 -->
            <LinearLayout
                android:id="@+id/FaultPredictionbysensor_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_shape_white"
                android:gravity="center"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/fault_prediction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fault Prediction by sensor data analysis"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/realtimemoniter_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_shape_white"
                android:gravity="center"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/fault_prediction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Realtime Data"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Poweroutputprediction_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_shape_white"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
               >

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/power_prediction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power output prediction and monitoring"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp" />
            </LinearLayout>

        </GridLayout>



        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@drawable/bg_shape_white"
            app:menu="@menu/bottom_navigation" />

    </RelativeLayout>

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:menu="@menu/nav_menu"
        android:background="#ffffff"/>

</androidx.drawerlayout.widget.DrawerLayout>